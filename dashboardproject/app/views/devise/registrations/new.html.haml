%div#registration.container
  .row-fluid
    .span8.offset2.registration-styling
      %h2 Sign up
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        - if flash[:alert]
          .row-fluid
            .span12.alert
              %button.close(data-dismiss="alert") &times;
              = flash[:alert]
        %br
        .row-fluid
          %label.span3 Email
          = f.email_field  :email, :autofocus => true, :placeholder => "Email Address", :class => "span8"
        .row-fluid
          %label.span3 Username
          = f.text_field :username, :placeholder => "Username", :class => "span8"
        .row-fluid
          %label.span3 Password
          = f.password_field :password, :placeholder => "Password", :class => "span8"
        .row-fluid
          %label.span3 Password Confirmation
          = f.password_field :password_confirmation, :placeholder => "Password", :class => "span8"
        .row-fluid
          = f.submit "Sign up", :class => "span12 btn btn-inverse"
        .row-fluid
          %hr
          = link_to "Forgot your password?", new_user_password_path, :class => "span5 btn btn-primary"
          = link_to "Sign in", new_user_session_path, :class => "span5 offset1 btn btn-primary"
